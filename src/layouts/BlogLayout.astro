---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<html lang="en" class="dark">
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="description" content="Jakob's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/profilePictureCircle.png" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex w-full">
      <div class="fixed inset-0 flex justify-center sm:px-8">
        <div class="flex w-full max-w-7xl lg:px-8">
          <div
            class="w-full ring-1 ring-zinc-100 bg-zinc-900 bg-[url('/topography.svg')] dark:ring-zinc-300/20"
          >
          </div>
        </div>
      </div>
    </div>
    <div class="pointer-events-none relative z-50 flex flex-none flex-col">
    </div>
    <div class="flex-none"></div>
    <div class="sm:px-8 mt-20">
      <div class="mx-auto w-full max-w-7xl lg:px-8">
        <div class="relative px-4 sm:px-8 lg:px-12">
          <slot />
          <div class="mx-auto max-w-2xl lg:max-w-5xl"></div>
        </div>
      </div>
    </div>
  </body>
</html>
